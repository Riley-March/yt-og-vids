{
  "manifest_version": 2,
  "name": "YouTube Original Video Finder",
  "version": "1.0",
  "description": "Find the original video from YouTube reaction videos",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://www.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/results*"],
      "js": ["content.js"]
    }
  ]
}

